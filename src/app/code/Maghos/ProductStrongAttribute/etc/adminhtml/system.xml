<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="fields_product_strong_attribute" translate="label" type="text" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Product strong attribute</label>
                <field id="words" translate="label comment" type="textarea" sortOrder="10" showInDefault="1" canRestore="1">
                    <label>Words</label>
                    <comment>Enter the words that will be highlighted in the product description. Each expression is on a new line</comment>
                </field>
            </group>
        </section>
    </system>
</config>
